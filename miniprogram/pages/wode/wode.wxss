
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(78, 77, 77);
  margin: 80rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.cont{
  position: relative;
  width: 100%;
  height: 350rpx;
  text-align: center;
  background-color: beige;
}


.biao {
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  margin: 50rpx;
  margin-bottom: 30rpx;
}

.btn {
  background-color: #ffda85;
  color: rgb(46, 46, 46);
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 50rpx;
  margin-bottom: 30rpx;
}

.btn image {
  width: 75rpx;
  height: 75rpx;
  padding-right: 30rpx;
}

.btn text{
  border-radius: 40rpx;
  padding-right: 10rpx;
  font-size: 14pt;
  align-items: center;
  justify-content: center;
}
.leibiao {
  flex-direction: column;
  /*垂直布局*/
  
}

.xiaobox {
  display: flex;
  /*flex布局模型*/
  flex-direction: row;
  /*水平布局*/
  align-items: center;
  /*垂直方向居中*/
  border: 1rpx solid #F5F5F5;
  /*1rpx宽的银色实线边框*/
  padding: 32rpx;
  /*内边距10rpx*/

}

.xiaobox text {
  font-size: 34rpx;
  flex-grow: 1;
  /*扩张多余空间宽度*/
}

.xiaobox image {
  width: 48rpx;
  /*宽度*/
  height: 48rpx;
  /*高度*/
  margin: 0rpx 16rpx;
  /*上下外边距0，左右外边距15rpx*/
  padding-top: 1rpx;
}

#jian {
  display: flex;
  justify-content: flex-end;
  width: 35rpx;
  /*宽度*/
  height: 35rpx;
  /*高度*/

}