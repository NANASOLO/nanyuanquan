.container{
  display: flex;/*flex布局模型*/
  flex-direction: column; /*垂直布局*/

}
.search_input {  
  height: 90rpx;  
  padding-top: 30rpx;  
  padding-left: 30rpx;  
  padding-right: 30rpx;  
}
.search_input .searchicon {  
  margin-right: 20rpx;
}
.search_input navigator {  
  height: 100%;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
  background-color: #F6F7FB;  
  border-radius: 15rpx;  
  color: #666;
}

swiper-item {
  overflow: scroll;
}

swiper{
  display: absolute;
  flex-direction: row;
  height: 100vh;
  margin-right: 32rpx;
